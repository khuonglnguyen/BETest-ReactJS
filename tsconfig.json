{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@guards/*": [
          "src/guards/*"
      ],
      "~@types/*": [
          "src/@types/*"
      ],
      "@App/*": [
          "src/App/*"
      ],
      "@hooks/*": [
          "src/hooks/*"
      ],
      "@components/*": [
          "src/components/*"
      ],
      "@helpers/*": [
          "src/helpers/*"
      ],
      "@pages/*": [
          "src/pages/*"
      ],
      "@apis/*": [
          "src/apis/*"
      ],
      "@assets/*": [
          "src/assets/*"
      ],
      "@constants/*": [
          "src/constants/*"
      ],
      "@store/*": [
          "src/store/*"
      ],
      "@reducer/*": [
          "src/reducer/*"
      ]
    },
    "outDir": "build/dist",
    "target": "es6",
    "lib": [
      "es6",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ],
  "include": [
    "src"
  ]
}